generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

// ============ ENUMS =============== //
enum Gender {
  MALE
  FEMALE
}

enum WorkType {
  REMOTE
  HYBRID
  ON_SITE
}

enum Degree {
  ASSOCIATE
  BACHELOR
  MASTER
  DOCTORATE
  DIPLOMA
  CERTIFICATE
  HIGH_SCHOOL
  POST_GRADUATE
  PROFESSIONAL
}

enum EmpType {
  FULL_TIME
  PART_TIME
}

enum EmpStatus {
  INTERNEE
  PROBATION
  PERMENANT
  TEMPORARY
}

// ============ NESTED FIELDS IN MODEL =============== //
type Education {
  degree      Degree?
  program     String? @db.String
  institution String? @db.String
  start_year  String? @db.String
  end_year    String? @db.String
}

type Experience {
  company_name String?   @db.String
  work_side    String?   @db.String
  work_type    String?   @db.String
  designation  String?   @db.String
  start_date   DateTime? @db.Date
  end_date     DateTime? @db.Date
  description  String?   @db.String
  skills       String[]  @default([])
}

type EmploymentType {
  title          EmpType
  effective_date DateTime? @default(now()) @db.Date
}

type EmploymentStatus {
  title          EmpStatus
  effective_date DateTime? @default(now()) @db.Date
}

// ============ MODELS =============== //
model User {
  id                String             @id @default(auto()) @map("_id") @db.ObjectId
  name              String             @db.String
  email             String             @unique @db.String
  birth_date        DateTime?          @db.Date
  password          String             @db.String
  hire_date         DateTime?          @default(now())
  gender            Gender?
  profile_picture   String?            @db.String
  phone_number      String?            @db.String
  country           String?            @db.String
  city              String?            @db.String
  street_address    String?            @db.String
  job_title         String?
  is_deactivated    Boolean?           @default(false)
  education         Education[]
  experience        Experience[]
  employment_type   EmploymentType[]
  employment_status EmploymentStatus[]
  work_hours        Int                @default(8) @db.Int
  work_type         WorkType

  @@map("users")
}

model Roles {
  id          String @id @default(auto()) @map("_id") @db.ObjectId
  title       String @db.String
  description String @db.String

  @@map("roles")
}

model Claims {
  id          String @id @default(auto()) @map("_id") @db.ObjectId
  title       String @db.String
  description String @db.String

  @@map("claims")
}
